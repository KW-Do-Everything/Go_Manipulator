<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

  <xacro:macro  name="go_gripper" params="prefix">

    <xacro:property name="meshes_file_direction" value="package://Go_manipulator_description/meshes"/>
        
    <!-- Gripper Base -->
    <link name="${prefix}gripper_base">
      <inertial>
        <origin xyz="0.0001 -0.0283 0" rpy="0 0 0" />
        <mass value="0.0568" />
        <inertia ixx="3.21e-5" ixy="8.06e-8" ixz="-3.23e-7" iyy="2.21e-5" iyz="-6.81e-18" izz="1.67e-5" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_file_direction}/gripper_base.STL" />
        </geometry>
        <material name="white"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_file_direction}/gripper_base.STL" />
        </geometry>
      </collision>
    </link>

    <!-- Joint 6
    <joint name="joint6" type="revolute">
      <origin xyz="0.0006 -0.1363 -0.0005" rpy="0 1.5708 0" />
      <parent link="link5" />
      <child link="gripper_base" />
      <axis xyz="0 1 0" />
      <limit lower="-3.14159" upper="3.14159" effort="1" velocity="1.0" />
    </joint> -->

    <!-- Gripper Finger 1 -->
    <link name="${prefix}gripper_finger1">
      <inertial>
        <origin xyz="0.0518 -0.0832 -0.0127" rpy="0 0 0" />
        <mass value="0.0356" />
        <inertia ixx="4.53e-5" ixy="-4.95e-7" ixz="-2.13e-7" iyy="2.41e-5" iyz="-8.24e-6" izz="2.56e-5" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_file_direction}/gripper_finger1.STL" />
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_file_direction}/gripper_finger1.STL" />
        </geometry>
      </collision>
    </link>

    <!-- Joint 7 -->
    <joint name="${prefix}joint7" type="revolute">
      <origin xyz="-0.0509 0.0241 -0.0024" rpy="0 0 0" />
      <parent link="${prefix}gripper_base" />
      <child link="${prefix}gripper_finger1" />
      <axis xyz="1 0 0" />
      <limit lower="-0.2" upper="0.2" effort="100" velocity="0.1" />
    </joint>

    <!-- Gripper Finger 2 -->
    <link name="${prefix}gripper_finger2">
      <inertial>
        <origin xyz="0.0518 0.0832 0.0141" rpy="0 0 0" />
        <mass value="0.0356" />
        <inertia ixx="4.53e-5" ixy="4.98e-7" ixz="2.22e-7" iyy="2.41e-5" iyz="-8.25e-6" izz="2.56e-5" />
      </inertial>
      <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_file_direction}/gripper_finger2.STL" />
        </geometry>
        <material name="black"/>
      </visual>
      <collision>
        <origin xyz="0 0 0" rpy="0 0 0" />
        <geometry>
          <mesh filename="${meshes_file_direction}/gripper_finger2.STL" />
        </geometry>
      </collision>
    </link>

    <!-- Joint 8 -->
    <joint name="${prefix}joint8" type="revolute">
      <origin xyz="0.0509 0.0241 0.0019" rpy="0 0 3.1416" />
      <parent link="${prefix}gripper_base" />
      <child link="${prefix}gripper_finger2" />
      <axis xyz="1 0 0" />
      <mimic joint="${prefix}joint7"/>
      <limit lower="-0.2" upper="0.2" effort="100" velocity="0.1" />
    </joint>
  </xacro:macro>
</robot>
